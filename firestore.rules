rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    match /stores/{storeId} {
      allow read, write: if isAuthenticated() && (
        !exists(/databases/$(database)/documents/stores/$(storeId)) ||
        isOwner(resource.data.userId)
      );
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    match /products/{productId} {
      allow read, write: if isAuthenticated() && (
        !exists(/databases/$(database)/documents/products/$(productId)) ||
        isOwner(resource.data.userId)
      );
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    match /sales/{saleId} {
      allow read, write: if isAuthenticated() && (
        !exists(/databases/$(database)/documents/sales/$(saleId)) ||
        isOwner(resource.data.userId)
      );
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    match /transactions/{transactionId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    match /collectiveOrders/{orderId} {
      allow read, write: if isAuthenticated() && (
        !exists(/databases/$(database)/documents/collectiveOrders/$(orderId)) ||
        isOwner(resource.data.userId)
      );
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // âžœ Tambahan untuk promosi
    match /promotions/{promotionId} {
      allow read, write: if isAuthenticated() && (
        // Saat dokumen belum ada (create pertama kali)
        !exists(/databases/$(database)/documents/promotions/$(promotionId)) ||
        // Saat dokumen sudah ada, hanya pemilik yang boleh
        isOwner(resource.data.userId)
      );
      // Syarat create: userId pada data yang dikirim harus sama dengan auth.uid
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    // Allow users to read and write their own customers
    match /customers/{customerId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    // Allow users to read and write their own debts
    match /debts/{debtId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    // Test collection for debugging (can be removed in production)
    match /test/{testId} {
      allow read, write: if isAuthenticated();
    }
  }
}